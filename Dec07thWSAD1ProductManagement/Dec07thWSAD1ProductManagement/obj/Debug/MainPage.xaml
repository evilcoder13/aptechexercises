<Page
    x:Class="Dec07thWSAD1ProductManagement.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dec07thWSAD1ProductManagement"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Splashscreen/splashscreen-1366x768-macosx.jpg" Stretch="Fill"/>
        </Grid.Background>
        <TextBox Name="xnUsername" HorizontalAlignment="Left" Margin="432,197,0,0" TextWrapping="Wrap" Header="Username" PlaceholderText="Input Username" FontSize="40" Width="500" VerticalAlignment="Top"/>
        <PasswordBox Name="xnPassword" HorizontalAlignment="Left" Margin="432,368,0,0" Header="Password" PlaceholderText="Input Password" FontSize="40" Width="500" VerticalAlignment="Top"/>
        <Button x:ConnectionId='1' Content="Login" FontSize="40" HorizontalAlignment="Left" Margin="429,546,0,0" VerticalAlignment="Top"                    />
        <Button x:ConnectionId='2' Content="Register" FontSize="40" HorizontalAlignment="Left" Margin="609,546,0,0" VerticalAlignment="Top"                        Visibility="Collapsed"/>

    </Grid>
</Page>

