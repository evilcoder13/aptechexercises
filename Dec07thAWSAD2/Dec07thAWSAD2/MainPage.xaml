<Page
    x:Class="Dec07thAWSAD2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dec07thAWSAD2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox Name="xnUsername" HorizontalAlignment="Left" Header="Username" Width="719" FontSize="40" Margin="354,168,0,0" TextWrapping="Wrap" PlaceholderText="Input Username" VerticalAlignment="Top" Height="145"/>
        <PasswordBox Name="xnPassword" HorizontalAlignment="Left" Header="Password" PlaceholderText="Input Password" Width="719" FontSize="40" Margin="354,360,0,0" VerticalAlignment="Top" Height="145"/>
        <Button Content="Login" Click="Login_Click" HorizontalAlignment="Left" FontSize="40" Margin="603,594,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
