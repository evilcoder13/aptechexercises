<Page
    x:Class="Dec2ndWSAD1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dec2ndWSAD1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Splashscreen/splashscreen-1366x768-black-windows-xp-leather.jpg" Stretch="Fill" />
        </Grid.Background>
        <TextBox x:ConnectionId='1' x:Name="xnUsername" Header="Username" FontSize="36" HorizontalAlignment="Left" Margin="434,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="120" Width="563"                             />
        <PasswordBox x:ConnectionId='2' x:Name="xnPassword" Header="Password" FontSize="36" HorizontalAlignment="Left" Margin="434,322,0,0" VerticalAlignment="Top" Height="113" Width="563"                             />
        <TextBlock x:Name="xnMsg" HorizontalAlignment="Left" Margin="434,489,0,0" TextWrapping="Wrap" Text="Please Login!" VerticalAlignment="Top" FontSize="36" Foreground="Red"/>
        <AppBarButton x:ConnectionId='3' HorizontalAlignment="Left" Icon="Forward" Label="Login" Margin="1053,360,0,0" VerticalAlignment="Top"                      />

    </Grid>
</Page>

