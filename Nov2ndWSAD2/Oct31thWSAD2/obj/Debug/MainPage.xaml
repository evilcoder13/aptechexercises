        <AppBarButton x:ConnectionId='3' HorizontalAlignment="Left" Icon="Forward" Label="Login" Margin="1006,450,0,0" VerticalAlignment="Top"                      />
        <TextBlock x:Name="xnMsg" FontSize="36" Foreground="Red" HorizontalAlignment="Left" Margin="484,581,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
    </Grid>
</Page>

