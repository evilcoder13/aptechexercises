        <TextBox x:ConnectionId='1' x:Name="xnUsername" FontSize="36" Header="Username" PlaceholderText="Tên Đăng Nhập" HorizontalAlignment="Left" Margin="484,185,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="476"                    />
